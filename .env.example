# Threads API Configuration (Frontend)
NEXT_PUBLIC_BACKEND_API_URL="https://api.threads-boost.online"
NEXT_PUBLIC_THREADS_CLIENT_ID="your-threads-client-id"
NEXT_PUBLIC_THREADS_REDIRECT_URI="https://threads-boost.online/auth"

# Application Settings for Next.js
NEXT_PUBLIC_APP_NAME="Threads-Boost"
NEXT_PUBLIC_APP_DESCRIPTION="Analytics and automation platform for Threads"

# Site Configuration
NEXT_PUBLIC_SITE_URL="https://threads-boost.online"
SITE_URL="https://threads-boost.online"

# SEO Verification Codes (Get these from respective platforms)
# Google Search Console: https://search.google.com/search-console/
GOOGLE_SITE_VERIFICATION="your-google-verification-code"
# Bing Webmaster Tools: https://www.bing.com/webmasters/
BING_VERIFICATION="your-bing-verification-code"
# Yandex Webmaster: https://webmaster.yandex.ru/
YANDEX_VERIFICATION="your-yandex-verification-code"
# Baidu Webmaster: https://ziyuan.baidu.com/
BAIDU_VERIFICATION="your-baidu-verification-code"
# Pinterest Verified Merchant: https://help.pinterest.com/en/business/article/claim-your-website
PINTEREST_VERIFICATION="your-pinterest-verification-code"
# Facebook Domain Verification: https://developers.facebook.com/docs/domain-verification/
FACEBOOK_DOMAIN_VERIFICATION="your-facebook-domain-verification-code"

# Authentication
NEXTAUTH_SECRET="your-nextauth-secret-here-generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="https://threads-boost.online"

# Analytics Configuration
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"
NEXT_PUBLIC_SENTRY_DSN="your-sentry-dsn"
VERCEL_ANALYTICS_ENABLED=true

# Performance Monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_PERFORMANCE_REPORT_THRESHOLD=100

# Consent Management
NEXT_PUBLIC_ENABLE_CONSENT_BANNER=true
NEXT_PUBLIC_ENABLE_GDPR_COMPLIANCE=true
NEXT_PUBLIC_ENABLE_CCPA_COMPLIANCE=true

# Error Tracking
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true
NEXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=0.1
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development

# Custom Analytics
NEXT_PUBLIC_ENABLE_CUSTOM_EVENTS=true
NEXT_PUBLIC_ENABLE_USER_JOURNEY_TRACKING=true
NEXT_PUBLIC_ENABLE_FUNNEL_TRACKING=true
NEXT_PUBLIC_ENABLE_HEATMAP_TRACKING=true

# Development
NODE_ENV="development"
ANALYZE="false" # Set to "true" to enable bundle analysis